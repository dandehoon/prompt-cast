{
  "manifest_version": 3,
  "name": "Prompt Cast",
  "version": "1.0.0",
  "description": "Efficiently manage and send messages to multiple AI services at once",
  "permissions": ["tabs", "activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://grok.com/*"
  ],
  "action": {
    "default_popup": "dist/popup/popup.html",
    "default_title": "Prompt Cast"
  },
  "background": {
    "service_worker": "dist/background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://grok.com/*"
      ],
      "js": ["dist/content/content.js"]
    }
  ]
}
